<mvc:View
    xmlns:mvc="sap.ui.core.mvc"
    xmlns:uxap="sap.uxap"
    xmlns="sap.m"
    xmlns:core="sap.ui.core"
    xmlns:forms="sap.ui.layout.form"
    controllerName="nodar.miminoshvili.controller.CarDetails"
    height="100%"
>
    <uxap:ObjectPageLayout
        id="ObjectPageLayout"
        upperCaseAnchorBar="false"
        enableLazyLoading="true"
        showFooter="{/EditMode}"
    >
        <uxap:headerTitle>
            <uxap:ObjectPageDynamicHeaderTitle>
                <uxap:breadcrumbs>
                    <Breadcrumbs>
                        <Link
                            text="{i18n>carListLink}"
                            press=".onCarListPress"
                        />
                        <Link
                            text="{i18n>carDetailsLink}"
                            enabled="false"
                        />
                    </Breadcrumbs>
                </uxap:breadcrumbs>
                <uxap:expandedHeading>
                    <Title text="{/Car/Name}" />
                </uxap:expandedHeading>

                <uxap:snappedHeading>
                    <HBox>
                        <Avatar
                            src="{/Car/Photo}"
                            class="sapUiMediumMarginEnd"
                            displayShape="Square"
                        />
                        <VBox>
                            <Title text="{/Car/Name}" />
                            <Label text="{/Car/ID}" />
                        </VBox>
                    </HBox>
                </uxap:snappedHeading>

                <uxap:expandedContent>
                    <Label text="{/Car/ID}" />
                </uxap:expandedContent>

                <uxap:snappedTitleOnMobile>
                    <Title text="{/Car/Name}" />
                </uxap:snappedTitleOnMobile>

                <uxap:actions>
                    <Button
                        text="Edit"
                        type="Emphasized"
                        press="handleEditPress"
                        visible="{= !%{/EditMode}}"
                    />
                    <Button
                        text="Delete"
                        press="handleDeletePress"
                        visible="{= !%{/EditMode}}"
                    />
                    <Button
                        text="Save"
                        type="Emphasized"
                        press="handleSavePress"
                        visible="{/EditMode}"
                    />
                    <Button
                        text="Cancel"
                        press="handleCancelPress"
                        visible="{/EditMode}"
                    />
                </uxap:actions>
            </uxap:ObjectPageDynamicHeaderTitle>
        </uxap:headerTitle>

        <uxap:headerContent>
            <FlexBox
                wrap="Wrap"
                fitContainer="true"
            >
                <Avatar
                    src="{/Car/Photo}"
                    class="sapUiMediumMarginEnd"
                    displayShape="Square"
                    displaySize="L"
                />

                <VBox class="sapUiLargeMarginEnd sapUiSmallMarginBottom">
                    <HBox
                        class="sapUiTinyMarginBottom"
                        renderType="Bare"
                    >
                        <Label
                            showColon="true"
                            text="Engine"
                            class="sapUiTinyMarginEnd"
                        />
                        <Text text="{/Car/Engine}" />
                    </HBox>
                    <HBox
                        class="sapUiTinyMarginBottom"
                        renderType="Bare"
                    >
                        <Label
                            showColon="true"
                            text="Category"
                            class="sapUiTinyMarginEnd"
                        />
                        <Text text="{/Car/Category}" />
                    </HBox>

                    <HBox>
                        <Label
                            showColon="true"
                            text="Supplier"
                            class="sapUiTinyMarginEnd"
                        />
                        <Text text="{/Car/Supplier}" />
                    </HBox>
                </VBox>

                <VBox class="sapUiLargeMarginEnd sapUiSmallMarginBottom">
                    <Title
                        text="Avaibility"
                        class="sapUiTinyMarginBottom"
                    />
                    <ObjectStatus
                        text="{/Car/Status}"
                        state="{path: '/Car/Status', formatter: '.Formatter.statusToState'}"
                        class="sapMObjectStatusLarge"
                    />
                </VBox>

                <VBox class="sapUiLargeMarginEnd sapUiSmallMarginBottom">
                    <Title
                        text="Release Year"
                        class="sapUiTinyMarginBottom"
                    />
                    <ObjectStatus
                        text="{/Car/ReleaseYear}"
                        class="sapMObjectStatusLarge"
                    />
                </VBox>

                <VBox class="sapUiLargeMarginEnd">
                    <Title
                        text="Price"
                        class="sapUiTinyMarginBottom"
                    />
                    <ObjectNumber
                        unit="{/Car/PriceCurrency}"
                        number="{
								parts:[{path:'/Car/PriceAmount'},{path:'/Car/PriceCurrency'}],
                                type: 'sap.ui.model.type.Currency',
                                formatOptions: {showMeasure: false}
                                }"
                        class="sapMObjectNumberLarge"
                    />
                </VBox>
            </FlexBox>
        </uxap:headerContent>

        <uxap:sections>
            <core:Fragment
                fragmentName="nodar.miminoshvili.view.fragments.DisplayItemInfo"
                type="XML"
            />
            <core:Fragment
                fragmentName="nodar.miminoshvili.view.fragments.ChangeItemInfo"
                type="XML"
            />
            <uxap:ObjectPageSection
                title="Maintenance History"
                titleUppercase="false"
            >
                <uxap:subSections>
                    <uxap:ObjectPageSubSection showTitle="false">
                        <uxap:blocks>
                            <Table
                                class="sapUxAPObjectPageSubSectionAlignContent"
                                width="auto"
                                items="{/MaintenanceHistory}"
                                id="maintenanceHistoryTable"
                            >
                                <headerToolbar>
                                    <OverflowToolbar>
                                        <ToolbarSpacer />
                                        <Button
                                            tooltip="Sort"
                                            icon="sap-icon://sort"
                                            press="handleSortButtonPressed"
                                        />
                                    </OverflowToolbar>
                                </headerToolbar>
                                <columns>
                                    <Column hAlign="Left">
                                        <Text text="Service Type" />
                                    </Column>
                                    <Column
                                        minScreenWidth="Tablet"
                                        demandPopin="true"
                                        hAlign="Right"
                                    >
                                        <Text text="Date" />
                                    </Column>
                                    <Column
                                        minScreenWidth="Tablet"
                                        demandPopin="true"
                                        hAlign="Left"
                                    >
                                        <Text text="Service Center" />
                                    </Column>
                                    <Column
                                        hAlign="Left"
                                        minScreenWidth="Tablet"
                                        demandPopin="true"
                                    >
                                        <Text text="Techician" />
                                    </Column>
                                    <Column hAlign="Right">
                                        <Text text="Cost" />
                                    </Column>
                                </columns>

                                <items>
                                    <ColumnListItem
                                        vAlign="Middle"
                                        press=".onColPress"
                                    >
                                        <cells>
                                            <Text text="{ServiceType}" />
                                            <ObjectAttribute text="{Date}" />
                                            <Text text="{ServiceCenter}" />
                                            <Text text="{Technician}" />

                                            <ObjectNumber
                                                unit="{Currency}"
                                                number="{Cost}"
                                            />
                                        </cells>
                                    </ColumnListItem>
                                </items>
                            </Table>
                        </uxap:blocks>
                    </uxap:ObjectPageSubSection>
                </uxap:subSections>
            </uxap:ObjectPageSection>
        </uxap:sections>
        <uxap:footer>
            <OverflowToolbar>
                <ToolbarSpacer />
                <Button
                    text="Save"
                    type="Emphasized"
                    press="handleSavePress"
                    visible="{/EditMode}"
                />
                <Button
                    text="Cancel"
                    press="handleCancelPress"
                    visible="{/EditMode}"
                />
            </OverflowToolbar>
        </uxap:footer>
    </uxap:ObjectPageLayout>
</mvc:View>
