<mvc:View
    xmlns:mvc="sap.ui.core.mvc"
    xmlns="sap.uxap"
    xmlns:m="sap.m"
    xmlns:core="sap.ui.core"
    xmlns:forms="sap.ui.layout.form"
    controllerName="nodar.miminoshvili.controller.CarDetails"
    height="100%"
>
    <ObjectPageLayout
        id="ObjectPageLayout"
        upperCaseAnchorBar="false"
        enableLazyLoading="true"
    >
        <headerTitle>
            <ObjectPageDynamicHeaderTitle>
                <breadcrumbs>
                    <m:Breadcrumbs>
                        <m:Link
                            text="{i18n>carListLink}"
                            press=".onCarListPress"
                        />
                        <m:Link
                            text="{i18n>carDetailsLink}"
                            enabled="false"
                        />
                    </m:Breadcrumbs>
                </breadcrumbs>
                <expandedHeading>
                    <m:Title text="{/Car/Name}" />
                </expandedHeading>

                <snappedHeading>
                    <m:HBox>
                        <m:Avatar
                            src="{/Car/Photo}"
                            class="sapUiMediumMarginEnd"
                            displayShape="Square"
                        />
                        <m:VBox>
                            <m:Title text="{/Car/Name}" />
                            <m:Label text="{/Car/ID}" />
                        </m:VBox>
                    </m:HBox>
                </snappedHeading>

                <expandedContent>
                    <m:Label text="{/Car/ID}" />
                </expandedContent>

                <snappedTitleOnMobile>
                    <m:Title text="{/Car/Name}" />
                </snappedTitleOnMobile>

                <actions>
                    <m:Button
                        id="editButton"
                        text="Edit"
                        type="Emphasized"
                        press="handleEditPress"
                    />
                    <m:Button
                        id="deleteButton"
                        text="Delete"
                        press="handleDeletePress"
                    />
                    <m:Button
                        id="saveButton"
                        text="Save"
                        type="Emphasized"
                        visible="false"
                        press="handleSavePress"
                    />
                    <m:Button
                        id="cancelButton"
                        text="Cancel"
                        visible="false"
                        press="handleCancelPress"
                    />
                </actions>
            </ObjectPageDynamicHeaderTitle>
        </headerTitle>

        <headerContent>
            <m:FlexBox
                wrap="Wrap"
                fitContainer="true"
            >
                <m:Avatar
                    src="{/Car/Photo}"
                    class="sapUiMediumMarginEnd"
                    displayShape="Square"
                    displaySize="L"
                />

                <m:VBox class="sapUiLargeMarginEnd sapUiSmallMarginBottom">
                    <m:HBox
                        class="sapUiTinyMarginBottom"
                        renderType="Bare"
                    >
                        <m:Label
                            showColon="true"
                            text="Engine"
                            class="sapUiTinyMarginEnd"
                        />
                        <m:Text text="{/Car/Engine}" />
                    </m:HBox>
                    <m:HBox
                        class="sapUiTinyMarginBottom"
                        renderType="Bare"
                    >
                        <m:Label
                            showColon="true"
                            text="Category"
                            class="sapUiTinyMarginEnd"
                        />
                        <m:Text text="{/Car/Category}" />
                    </m:HBox>

                    <m:HBox>
                        <m:Label
                            showColon="true"
                            text="Supplier"
                            class="sapUiTinyMarginEnd"
                        />
                        <m:Text text="{/Car/Supplier}" />
                    </m:HBox>
                </m:VBox>

                <m:VBox class="sapUiLargeMarginEnd sapUiSmallMarginBottom">
                    <m:Title
                        text="Avaibility"
                        class="sapUiTinyMarginBottom"
                    />
                    <m:ObjectStatus
                        text="{/Car/Status}"
                        state="{path: '/Car/Status', formatter: '.formatter.statusToState'}"
                        class="sapMObjectStatusLarge"
                    />
                </m:VBox>

                <m:VBox class="sapUiLargeMarginEnd sapUiSmallMarginBottom">
                    <m:Title
                        text="Release Year"
                        class="sapUiTinyMarginBottom"
                    />
                    <m:ObjectStatus
                        text="{/Car/ReleaseYear}"
                        class="sapMObjectStatusLarge"
                    />
                </m:VBox>

                <m:VBox class="sapUiLargeMarginEnd">
                    <m:Title
                        text="Price"
                        class="sapUiTinyMarginBottom"
                    />
                    <m:ObjectNumber
                        unit="{/Car/PriceCurrency}"
                        number="{
								parts:[{path:'/Car/PriceAmount'},{path:'/Car/PriceCurrency'}],
                                type: 'sap.ui.model.type.Currency',
                                formatOptions: {showMeasure: false}
                                }"
                        class="sapMObjectNumberLarge"
                    />
                </m:VBox>
            </m:FlexBox>
        </headerContent>

        <sections>
            <ObjectPageSection
                title="Maintenance History"
                titleUppercase="false"
            >
                <subSections>
                    <ObjectPageSubSection showTitle="false">
                        <blocks>
                            <m:Table
                                class="sapUxAPObjectPageSubSectionAlignContent"
                                width="auto"
                                items="{/MaintenanceHistory}"
                            >
                                <m:columns>
                                    <m:Column>
                                        <m:Text text="Service Type" />
                                    </m:Column>
                                    <m:Column
                                        minScreenWidth="Tablet"
                                        demandPopin="true"
                                    >
                                        <m:Text text="Date" />
                                    </m:Column>
                                    <m:Column
                                        minScreenWidth="Tablet"
                                        demandPopin="true"
                                    >
                                        <m:Text text="Service Center" />
                                    </m:Column>
                                    <m:Column
                                        minScreenWidth="Tablet"
                                        demandPopin="true"
                                    >
                                        <m:Text text="Techician" />
                                    </m:Column>
                                    <m:Column hAlign="End">
                                        <m:Text text="Cost" />
                                    </m:Column>
                                </m:columns>

                                <m:items>
                                    <m:ColumnListItem
                                        vAlign="Middle"
                                        press=".onColPress"
                                    >
                                        <m:cells>
                                            <!-- <ObjectIdentifier title="{ID}" /> -->

                                            <m:Text text="{ServiceType}" />
                                            <m:ObjectAttribute text="{Date}" />
                                            <m:Text text="{ServiceCenter}" />
                                            <m:Text text="{Technician}" />

                                            <m:ObjectNumber
                                                unit="{Currency}"
                                                number="{Cost}"
                                            />
                                        </m:cells>
                                    </m:ColumnListItem>
                                </m:items>
                            </m:Table>
                        </blocks>
                    </ObjectPageSubSection>
                </subSections>
            </ObjectPageSection>
        </sections>
    </ObjectPageLayout>
</mvc:View>
