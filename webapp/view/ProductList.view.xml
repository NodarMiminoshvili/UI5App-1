<mvc:View
    xmlns:mvc="sap.ui.core.mvc"
    xmlns:core="sap.ui.core"
    xmlns="sap.m"
    xmlns:f="sap.f"
    xmlns:fb="sap.ui.comp.filterbar"
    controllerName="nodar.miminoshvili.controller.ProductList"
    height="100%"
>
    <f:DynamicPage class="sapUiNoContentPadding">
        <f:title>
            <f:DynamicPageTitle>
                <f:heading>
                    <Title text="{i18n>productTableTitle}" />
                </f:heading>
                <f:expandedContent>
                    <Label text="{appState>/ExpandedLabel}" />
                </f:expandedContent>
                <f:snappedContent>
                    <Label text="{appState>/SnappedLabel}" />
                </f:snappedContent>
            </f:DynamicPageTitle>
        </f:title>

        <f:header>
            <f:DynamicPageHeader>
                <f:content>
                    <fb:FilterBar
                        id="filterbar"
                        useToolbar="false"
                        showGoOnFB="false"
                    >
                        <fb:filterGroupItems>
                            <fb:FilterGroupItem
                                name="SearchField"
                                groupName="Group1"
                                visibleInFilterBar="true"
                            >
                                <fb:control>
                                    <SearchField
                                        search=".onSearch"
                                        id="searchField"
                                    />
                                </fb:control>
                            </fb:FilterGroupItem>
                            <fb:FilterGroupItem
                                name="Supplier"
                                label="{i18n>supplier}"
                                groupName="Group1"
                                visibleInFilterBar="true"
                            >
                                <fb:control>
                                    <ComboBox
                                        name="Supplier"
                                        selectionChange=".onComboBoxChange"
                                        showClearIcon="true"
                                        items="{
												path: '/Suppliers',
												templateShareable: true
											}"
                                    >
                                        <core:Item
                                            key="{ID}"
                                            text="{Name}"
                                        />
                                    </ComboBox>
                                </fb:control>
                            </fb:FilterGroupItem>
                            <fb:FilterGroupItem
                                name="Category"
                                label="{i18n>category}"
                                groupName="Group1"
                                visibleInFilterBar="true"
                            >
                                <fb:control>
                                    <MultiComboBox
                                        name="Category"
                                        selectionChange=".onMultiComboBoxChange"
                                        items="{
												path: '/Categories',
												templateShareable: true
											}"
                                    >
                                        <core:Item
                                            key="{ID}"
                                            text="{Name}"
                                        />
                                    </MultiComboBox>
                                </fb:control>
                            </fb:FilterGroupItem>
                            <fb:FilterGroupItem
                                name="ReleaseYear"
                                label="{i18n>releasedBetween}"
                                groupName="Group1"
                                visibleInFilterBar="true"
                            >
                                <fb:control>
                                    <DateRangeSelection
                                        displayFormat="yyyy"
                                        change="onDatePickerChange"
                                    />
                                </fb:control>
                            </fb:FilterGroupItem>
                        </fb:filterGroupItems>
                    </fb:FilterBar>
                </f:content>
            </f:DynamicPageHeader>
        </f:header>

        <f:content>
            <Table
                id="table"
                items="{
                        path: '/Products',
                        parameters: { expand: 'Supplier,Category'  },
                        sorter: { path: 'Name', descending: false }
                    }"
                mode="MultiSelect"
                inset="true"
                selectionChange="onTableSelectionChange"
            >
                <headerToolbar>
                    <OverflowToolbar>
                        <Title
                            text="{
                                parts: ['i18n>products', 'appState>/Count'],
						        formatter: '.Formatter.formatMessage'
                            }"
                        />
                        <ToolbarSpacer />
                        <Button
                            text="{i18n>create}"
                            press=".onOpenProductForm"
                            id="createButton"
                        />
                        <Button
                            id="deleteButton"
                            text="{i18n>delete}"
                            enabled="{appState>/DeleteButton/Enabled}"
                            press="handleDeletePress"
                        />
                        <Button
                            tooltip="{i18n>sort}"
                            icon="sap-icon://sort"
                            press="handleSortButtonPressed"
                        />
                    </OverflowToolbar>
                </headerToolbar>
                <columns>
                    <Column
                        minScreenWidth="Medium"
                        demandPopin="true"
                        hAlign="Left"
                    >
                        <Text text="{i18n>product}" />
                    </Column>

                    <Column
                        hAlign="Left"
                        minScreenWidth="Large"
                        demandPopin="true"
                    >
                        <Text text="{i18n>supplier}" />
                    </Column>
                    <Column
                        hAlign="Left"
                        minScreenWidth="XXLarge"
                        demandPopin="true"
                    >
                        <Text text="{i18n>category}" />
                    </Column>

                    <Column
                        minScreenWidth="Desktop"
                        demandPopin="true"
                        hAlign="Right"
                    >
                        <Text text="{i18n>releaseDate}" />
                    </Column>

                    <Column
                        minScreenWidth="Desktop"
                        demandPopin="true"
                        hAlign="Right"
                    >
                        <Text text="{i18n>discontinuedDate}" />
                    </Column>
                    <Column
                        hAlign="Left"
                        minScreenWidth="1250px"
                        demandPopin="true"
                    >
                        <Text text="{i18n>rating}" />
                    </Column>
                    <Column
                        minScreenWidth="Small"
                        demandPopin="true"
                        hAlign="Right"
                    >
                        <Text text="{i18n>price}" />
                    </Column>
                </columns>
                <items>
                    <ColumnListItem
                        type="Navigation"
                        press=".onColPress"
                    >
                        <cells>
                            <ObjectIdentifier
                                title="{ 
                                        parts: ['Name', 'ID'],
						                formatter: '.Formatter.formatNameAndId'
                                    }"
                            />
                            <Text text="{Supplier/Name}" />

                            <Text text="{Category/Name}" />

                            <ObjectAttribute
                                text="{ path: 'ReleaseDate',
                                        type: 'sap.ui.model.type.Date',
                                        formatOptions: { style: 'medium' } }"
                            />

                            <ObjectStatus
                                text="{ 
                                        path: 'DiscontinuedDate',
                                        type: 'sap.ui.model.type.Date',
                                        formatOptions: { style: 'medium' },
                                        formatter: '.Formatter.formatDiscontinuedDate'
                                    }"
                                state="{path: 'DiscontinuedDate', formatter: '.Formatter.dateToState'}"
                            />

                            <RatingIndicator
                                value="{Rating}"
                                displayOnly="true"
                            />

                            <ObjectNumber
                                unit="{i18n>usd}"
                                number="{Price}"
                            />
                        </cells>
                    </ColumnListItem>
                </items>
            </Table>
        </f:content>
    </f:DynamicPage>
</mvc:View>
