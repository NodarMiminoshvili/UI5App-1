<core:FragmentDefinition
    xmlns:mvc="sap.ui.core.mvc"
    xmlns:uxap="sap.uxap"
    xmlns="sap.m"
    xmlns:core="sap.ui.core"
    xmlns:forms="sap.ui.layout.form"
>
    <uxap:ObjectPageSection visible="{appState>/EditMode}">
        <uxap:subSections>
            <uxap:ObjectPageSubSection
                title="General Information"
                showTitle="false"
            >
                <uxap:blocks>
                    <forms:SimpleForm
                        class="sapUxAPObjectPageSubSectionAlignContent"
                        layout="ColumnLayout"
                        columnsM="2"
                        columnsL="3"
                        columnsXL="4"
                        id="form"
                    >
                        <Label text="{i18n>id}" />
                        <Input
                            value="{ID}"
                            editable="false"
                            required="true"
                        />

                        <Label text="{i18n>name}" />
                        <Input
                            type="Text"
                            value="{
					            path: 'Name',
					            type: 'sap.ui.model.type.String',
					            constraints: {
						            minLength: 3
					            }
                            }"
                            required="true"
                            valueLiveUpdate="true"
                        />

                        <Label text="{i18n>supplier}" />
                        <Select
                            id="supplierSelect"
                            items="{/Suppliers}"
                            required="true"
                            selectedKey="{Supplier/ID}"
                        >
                            <core:Item
                                key="{ID}"
                                text="{Name}"
                            />
                        </Select>

                        <Label text="{i18n>category}" />
                        <Select
                            id="categorySelect"
                            items="{/Categories}"
                            required="true"
                            selectedKey="{Category/ID}"
                        >
                            <core:Item
                                key="{ID}"
                                text="{Name}"
                            />
                        </Select>

                        <Label text="{i18n>description}" />
                        <TextArea
                            placeholder="{i18n>summaryText}"
                            value="{
					                path: 'Description',
					                type: 'sap.ui.model.type.String',
					                constraints: {
						                        minLength: 3,
						                        maxLength: 150
					                            }
                            }"
                            required="true"
                            valueLiveUpdate="true"
                        />

                        <Label text="{i18n>rating}" />
                        <RatingIndicator value="{Rating}" />

                        <Label text="{i18n>releaseDate}" />
                        <DatePicker
                            value="{
                                    'path': 'ReleaseDate',
                                    'type': 'sap.ui.model.type.Date'
                                 }"
                            required="true"
                        />

                        <Label text="{i18n>price}" />
                        <Input
                            type="Number"
                            placeholder="{i18n>itemFormInputPlaceholderForPrice}"
                            value="{
					            path: 'Price',
					            type: 'sap.ui.model.type.Float',
                                formatOptions: { groupingEnabled: false },
					            constraints: {
						            minimum: 1,
                                    maximum: 999999.99999
					                }
                            }"
                            required="true"
                            valueLiveUpdate="true"
                        />
                    </forms:SimpleForm>
                </uxap:blocks>
            </uxap:ObjectPageSubSection>
        </uxap:subSections>
    </uxap:ObjectPageSection>
</core:FragmentDefinition>
