<core:FragmentDefinition
    xmlns="sap.m"
    xmlns:core="sap.ui.core"
>
    <Dialog
        icon="sap-icon://question-mark"
        title="{i18n>dialogType}"
    >
        <FlexBox
            height="100%"
            alignItems="Center"
            justifyContent="Center"
            alignContent="Center"
        >
            <Text
                class="sapUiSmallMarginTop"
                text="{i18n>productDelDialogQuestion}"
            />
        </FlexBox>
        <beginButton>
            <Button
                type="Negative"
                icon="sap-icon://delete"
                text="{i18n>delDialogConfirm}"
                press=".onConfirmItemDelete"
            />
        </beginButton>
        <endButton>
            <Button
                text="{i18n>delDialogCancel}"
                press=".onCancelItemDelete"
            />
        </endButton>
    </Dialog>
</core:FragmentDefinition>
