<core:FragmentDefinition
    xmlns="sap.m"
    xmlns:core="sap.ui.core"
>
    <ViewSettingsDialog confirm="handleSortDialogConfirm">
        <sortItems>
            <ViewSettingsItem
                text="{i18n>price}"
                key="Price"
            />
            <ViewSettingsItem
                text="{i18n>name}"
                key="Name"
                selected="true"
            />
            <ViewSettingsItem
                text="{i18n>supplier}"
                key="Supplier/Name"
            />
            <ViewSettingsItem
                text="{i18n>category}"
                key="Category/Name"
            />
            <ViewSettingsItem
                text="{i18n>rating}"
                key="Rating"
            />
            <ViewSettingsItem
                text="{i18n>releaseDate}"
                key="ReleaseDate"
            />
        </sortItems>
    </ViewSettingsDialog>
</core:FragmentDefinition>
