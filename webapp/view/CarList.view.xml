<mvc:View
    xmlns:mvc="sap.ui.core.mvc"
    xmlns:core="sap.ui.core"
    xmlns="sap.m"
    xmlns:f="sap.f"
    xmlns:fb="sap.ui.comp.filterbar"
    controllerName="nodar.miminoshvili.controller.CarList"
    height="100%"
>
    <f:DynamicPage class="sapUiNoContentPadding">
        <f:title>
            <f:DynamicPageTitle>
                <f:heading>
                    <Title text="{i18n>carTableTitle}" />
                </f:heading>
            </f:DynamicPageTitle>
        </f:title>

        <f:header>
            <f:DynamicPageHeader>
                <f:content>
                    <fb:FilterBar
                        id="filterbar"
                        useToolbar="false"
                        showGoOnFB="false"
                    >
                        <fb:filterGroupItems>
                            <fb:FilterGroupItem
                                name="SearchField"
                                groupName="Group1"
                                visibleInFilterBar="true"
                            >
                                <fb:control>
                                    <SearchField
                                        search=".onSearch"
                                        id="searchField"
                                    />
                                </fb:control>
                            </fb:FilterGroupItem>
                            <fb:FilterGroupItem
                                name="Supplier"
                                label="{i18n>supplier}"
                                groupName="Group1"
                                visibleInFilterBar="true"
                            >
                                <fb:control>
                                    <ComboBox
                                        name="Supplier"
                                        selectionChange=".onComboBoxChange"
                                        showClearIcon="true"
                                        items="{
												path: '/Suppliers',
												templateShareable: true
											}"
                                    >
                                        <core:Item
                                            key="{Supplier}"
                                            text="{Supplier}"
                                        />
                                    </ComboBox>
                                </fb:control>
                            </fb:FilterGroupItem>
                            <fb:FilterGroupItem
                                name="Category"
                                label="{i18n>category}"
                                groupName="Group1"
                                visibleInFilterBar="true"
                            >
                                <fb:control>
                                    <MultiComboBox
                                        name="Category"
                                        selectionChange=".onMultiComboBoxChange"
                                        items="{
												path: '/Categories',
												templateShareable: true
											}"
                                    >
                                        <core:Item
                                            key="{Category}"
                                            text="{Category}"
                                        />
                                    </MultiComboBox>
                                </fb:control>
                            </fb:FilterGroupItem>
                            <fb:FilterGroupItem
                                name="ReleaseYear"
                                label="{i18n>releaseYear}"
                                groupName="Group1"
                                visibleInFilterBar="true"
                            >
                                <fb:control>
                                    <DatePicker
                                        displayFormat="yyyy"
                                        change="onDatePickerChange"
                                    />
                                </fb:control>
                            </fb:FilterGroupItem>
                        </fb:filterGroupItems>
                    </fb:FilterBar>
                </f:content>
            </f:DynamicPageHeader>
        </f:header>

        <f:content>
            <Table
                id="table"
                items="{/Cars}"
                mode="MultiSelect"
                inset="true"
                selectionChange="onTableSelectionChange"
            >
                <headerToolbar>
                    <OverflowToolbar>
                        <Title
                            text="{
                                parts: [
							    'i18n>cars',
							    '/Count'
						        ],
						        formatter: '.Formatter.formatMessage'
                            }"
                        />
                        <ToolbarSpacer />
                        <Button
                            text="{i18n>create}"
                            press=".onOpenProductForm"
                            id="createButton"
                        />
                        <Button
                            id="deleteButton"
                            text="{i18n>delete}"
                            enabled="{appState>/DeleteButton/Enabled}"
                            press="handleDeletePress"
                        />
                        <Button
                            tooltip="Sort"
                            icon="sap-icon://sort"
                            press="handleSortButtonPressed"
                        />
                    </OverflowToolbar>
                </headerToolbar>
                <columns>
                    <Column hAlign="Center">
                        <Text text="{i18n>photo}" />
                    </Column>
                    <Column
                        minScreenWidth="Medium"
                        demandPopin="true"
                        hAlign="Left"
                    >
                        <Text text="{i18n>product}" />
                    </Column>
                    <Column hAlign="Left">
                        <Text text="{i18n>name}" />
                    </Column>
                    <Column
                        hAlign="Left"
                        minScreenWidth="Large"
                        demandPopin="true"
                    >
                        <Text text="{i18n>supplier}" />
                    </Column>
                    <Column
                        hAlign="Left"
                        minScreenWidth="XXLarge"
                        demandPopin="true"
                    >
                        <Text text="{i18n>category}" />
                    </Column>

                    <Column
                        hAlign="Left"
                        minScreenWidth="1250px"
                        demandPopin="true"
                    >
                        <Text text="{i18n>availability}" />
                    </Column>
                    <Column
                        minScreenWidth="Desktop"
                        demandPopin="true"
                        hAlign="Right"
                    >
                        <Text text="{i18n>releaseYear}" />
                    </Column>
                    <Column
                        minScreenWidth="Small"
                        demandPopin="true"
                        hAlign="Right"
                    >
                        <Text text="{i18n>price}" />
                    </Column>
                </columns>
                <items>
                    <ColumnListItem
                        type="Navigation"
                        press=".onColPress"
                    >
                        <cells>
                            <Avatar
                                src="{Photo}"
                                displaySize="S"
                            />
                            <ObjectIdentifier title="{ID}" />
                            <Text text="{Name}" />
                            <Text text="{Supplier}" />
                            <Text text="{Category}" />
                            <ObjectStatus
                                text="{Status}"
                                state="{path: 'Status', formatter: '.Formatter.statusToState'}"
                            />

                            <ObjectAttribute text="{ReleaseYear}" />

                            <ObjectNumber
                                unit="{PriceCurrency}"
                                number="{PriceAmount}"
                            />
                        </cells>
                    </ColumnListItem>
                </items>
            </Table>
        </f:content>
    </f:DynamicPage>
</mvc:View>
